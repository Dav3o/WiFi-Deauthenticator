{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "outDir": "./build",
        "baseUrl": "./",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "suppressImplicitAnyIndexErrors": true,
        "typeRoots": [
            "./node_modules/@types",
            "./types/"
        ],
    },
    "include": [
        "*",
        "types",
        "view"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}