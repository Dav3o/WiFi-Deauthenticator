{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "sourceMap": false,
        "outDir": "./build",
        "baseUrl": "./src",
        "suppressImplicitAnyIndexErrors": true,
        "typeRoots": [
            "./node_modules/@types",
            "./src/types/"
        ],
    },
    "include": [
        "src/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}