{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "outDir": "./build",
        "baseUrl": "./src",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "suppressImplicitAnyIndexErrors": true,
        "typeRoots": [
            "./node_modules/@types",
            "./src/types/"
        ],
    },
    "include": [
        "src/*",
        "src/types",
        "src/view"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}